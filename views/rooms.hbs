<div class="overlay"></div>


<section class="explore">
    <section class="explore-heading">
        <h2>Explore</h2>
    </section>


    <section class="explore-rooms">
        <button class="add" href="#">
            <img src="/assets/svg/add.svg" alt="">
        </button>
        <ul class="lobbies">
            {{#each lobbies}}
            <li>
                <a href="/room/{{_id}}">{{name}}</a>
                <p>{{description}}</p>
                <p>Created by:{{user}}</p>
            </li>
            {{/each}}
        </ul>
    </section>

    <div class="modal">
        <div class="modal-close">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 14 14" fill="none">
